<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <div class="item">
        <input type="checkbox">
        <p><%=newListItems[i]%></p>
        <form class="delete" action="/delete" method="post">

          <button class="delete" type="submit" name="deletedItem"
          value="<%=newListItems[i]%>"><i class="fas fa-trash-alt icon trash-icon"></i></button>
          <input type="hidden" name="list" value="<%=listTitle%>">

        </form>
      </div>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Add a Task" autocomplete="off">
        <button class="add" type="submit" name="list" value="<%=listTitle%>">+</button>
      </form>
  </div>

<%- include("footer") -%>
